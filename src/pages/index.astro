---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import profileImage from '../assets/profile.jpeg';
import { getLastConferenceDate, getLastConferenceWithReplay }from '../utils/talks'

// Union type for mixed content
type ContentItem =
	| { type: 'post'; data: CollectionEntry<'blog'>; sortDate: Date }
	| { type: 'talk'; data: CollectionEntry<'talks'>; sortDate: Date, lastConference: {name: string, replayLink?: string} };

// Get both collections
const allPosts = await getCollection('blog');
const allTalks = await getCollection('talks');

// Transform to union type with discriminator
const posts: ContentItem[] = allPosts.map(post => ({
	type: 'post' as const,
	data: post,
	sortDate: post.data.pubDate,
}));

const talks: ContentItem[] = allTalks.map(talk => ({
	type: 'talk' as const,
	data: talk,
	sortDate: getLastConferenceDate(talk),
	lastConference: getLastConferenceWithReplay(talk)
}));

// Merge and sort
const recentContent = [...posts, ...talks]
	.sort((a, b) => b.sortDate.valueOf() - a.sortDate.valueOf())
	.slice(0, 5);
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.hero {
				text-align: center;
				padding: 3rem 0;
			}
			.profile-image {
				width: 200px;
				height: 200px;
				border-radius: 50%;
				object-fit: cover;
				margin-bottom: 2rem;
				border: 4px solid rgb(var(--accent));
			}
			.hero h1 {
				font-size: 3rem;
				margin-bottom: 0.5rem;
			}
			.hero p {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}
			.recent-posts {
				margin-top: 3rem;
			}
			.recent-posts h2 {
				font-size: 2rem;
				margin-bottom: 1.5rem;
			}
			.post-list {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
			}
			.post-item {
				padding: 1.5rem;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 8px;
				transition: box-shadow 0.2s ease, transform 0.2s ease;
			}
			.post-item:hover {
				box-shadow: 0 4px 12px rgba(var(--black), 10%);
				transform: translateY(-2px);
			}
			.post-item a {
				text-decoration: none;
				color: inherit;
			}
			.post-item h3 {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
			}
			.post-item .date {
				color: rgb(var(--gray));
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			.badge {
				display: inline-block;
				padding: 0.15rem 0.5rem;
				border-radius: 4px;
				font-size: 0.75rem;
				font-weight: 600;
				text-transform: uppercase;
			}
			.badge-post {
				background: rgba(var(--accent), 0.1);
				color: rgb(var(--accent));
			}
			.badge-talk {
				background: rgba(129, 140, 248, 0.1);
				color: rgb(129, 140, 248);
			}
			.post-item .description {
				color: rgb(var(--gray-dark));
				line-height: 1.6;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<Image
					src={profileImage}
					alt="Photo de profil"
					class="profile-image"
					width={200}
					height={200}
				/>
				<h1>Bertrand Nau</h1>
				<p>Bienvenue sur mon blog où je vous partage mes découvertes et activités autour de l'IT.</p>
				<p>On parlera Infra, IA, DevOps, Dev, et peut-être même plus !!!</p>
			</section>

			<section class="recent-posts">
				<h2>Contenu récent</h2>
				<div class="post-list">
					{recentContent.map((item) => (
						<article class="post-item">
							{item.type === 'post' ? (
								<a href={`/blog/${item.data.id}`}>
									<div class="date">
										<FormattedDate date={item.sortDate} />
										<span class="badge badge-post">Article</span>
									</div>
									<h3>{item.data.data.title}</h3>
									<p class="description">{item.data.data.description}</p>
								</a>
							) : (
								<a href={`/talks/${item.data.id}`}>
									<div class="date">
										<FormattedDate date={item.sortDate} />
										<span class="badge badge-talk">Conférence</span>
									</div>
									<h3>{item.data.data.title}</h3>
									{item.lastConference &&<p class="description"><a href={item.lastConference.replayLink}>{item.lastConference.name}</a></p>}
									
								</a>
							)}
						</article>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
