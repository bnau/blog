---
import { Icon } from 'astro-icon/components';
import SocialLinks from './SocialLinks.astro';
import { SOCIAL_PROFILES } from '../consts';

const today = new Date();
---

<footer>
	<SocialLinks
		email={SOCIAL_PROFILES.email}
		github={SOCIAL_PROFILES.github}
		linkedin={SOCIAL_PROFILES.linkedin}
		bluesky={SOCIAL_PROFILES.bluesky}
		size={24}
	/>
	<p>&copy; {today.getFullYear()} Bertrand Nau. Tous droits réservés.</p>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}

	footer p {
		margin: 0;
	}

	footer :global(.social-links) {
		margin-bottom: 1.5rem;
		justify-content: center;
	}

	.footer-links {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.rss-link {
		color: rgb(var(--gray));
		transition: color 0.2s ease, transform 0.2s ease;
		display: flex;
		align-items: center;
	}

	.rss-link:hover {
		color: var(--accent);
		transform: translateY(-2px);
	}
</style>
