---
import { SITE_TITLE, SOCIAL_PROFILES } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import SocialLinks from './SocialLinks.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Accueil</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/talks">Conf√©rences</HeaderLink>
		</div>
		<div class="header-actions">
			<SocialLinks
				email={SOCIAL_PROFILES.email}
				github={SOCIAL_PROFILES.github}
				linkedin={SOCIAL_PROFILES.linkedin}
				bluesky={SOCIAL_PROFILES.bluesky}
				size={20}
			/>
			<div class="separator"></div>
			<ThemeToggle />
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background 0.3s ease;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--black));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.header-actions {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	.separator {
		width: 1px;
		height: 24px;
		background-color: rgb(var(--gray));
		opacity: 0.4;
		margin: 0 0.25rem;
	}
	@media (max-width: 720px) {
		.header-actions {
			gap: 0.5rem;
		}
		.separator {
			height: 20px;
		}
	}
</style>
